{
  "name": "vue-viewport-manager",
  "version": "0.2.5",
  "repository": "https://github.com/frankhood/vue-viewport-manager",
  "description": "A Vue.js gauge panel to explore an ocean of viewports",
  "author": "Frankhood Business Solutions <info@frankhood.it>",
  "main": "dist/vue-viewport-manager.min.js",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "dev": "cross-env NODE_ENV=development webpack-dev-server --config build/webpack.config.js --hot --open",
    "build": "cross-env NODE_ENV=production webpack --config build/webpack.config.js",
    "lint": "eslint --ext js src",
    "pretest": "yon run lint",
    "test": "jest",
    "prepublishOnly": "yon run build"
  },
  "lint-staged": {
    "*.{vue,js}": [
      "eslint --fix"
    ]
  },
  "jest": {
    "modulePaths": [
      "<rootDir>"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/babel-jest"
    },
    "snapshotSerializers": [
      "<rootDir>/node_modules/jest-serializer-vue"
    ]
  },
  "pre-commit": "lint",
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/plugin-transform-destructuring": "^7.1.3",
    "@babel/plugin-transform-shorthand-properties": "^7.0.0",
    "@babel/plugin-transform-spread": "^7.0.0",
    "@babel/preset-env": "^7.1.0",
    "@vue/test-utils": "^1.0.0-beta.25",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^25.0.0",
    "babel-loader": "^8.0.4",
    "chalk": "^2.4.1",
    "cross-env": "^5.2.0",
    "eslint": "^5.6.1",
    "eslint-config-standard": "^12.0.0",
    "eslint-config-vue": "^2.0.2",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "eslint-plugin-vue": "^4.7.1",
    "gsap": "^3.6.0",
    "html-webpack-plugin": "^5.5.0",
    "jest": "^25.0.0",
    "jest-serializer-vue": "^2.0.2",
    "lodash": "^4.17.15",
    "rimraf": "^2.6.2",
    "vue": "^2.5.17",
    "vue-json-tree-view": "^2.1.4",
    "vue-loader": "^15.4.2",
    "vue-template-compiler": "^2.5.17",
    "vuex": "^3.0.1",
    "webpack": "^4.20.2",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.9",
    "yarn-or-npm": "^2.0.4"
  },
  "peerDependencies": {
    "vue": "^2.5.17",
    "vuex": "^3.0.1"
  },
  "license": "MIT",
  "browserslist": [
    "last 2 versions"
  ]
}
